{
  "extends": "./node_modules/@grafana/toolkit/src/config/tsconfig.plugin.json",
  "include": ["src", "types"],
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types"]
  },
  "ordered-imports": [
    true,
    {
      "import-sources-order": "lowercase-last",
      "named-imports-order": "lowercase-first"
    }
  ]
}
